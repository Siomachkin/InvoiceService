    "description": "Invoice generation and email service",
    "require": {
        "php": "^8.3",      
        "monolog/monolog": "^2.0",
        "mpdf/mpdf": "^8.2.1",
        "mongodb/mongodb": "^1.18",
        "predis/predis": "^2.2",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "zircote/swagger-php": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "InvoiceService\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml"
    }
}
